{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "type-check": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:template": {
      "cache": false,
      "persistent": true
    },
    "dev:playground": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
